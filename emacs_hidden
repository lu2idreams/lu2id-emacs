(tool-bar-mode -1)
(menu-bar-mode -1)
(toggle-scroll-bar -1)
(global-visual-line-mode t)
(require 'package)
(setq package-check-signature nil)
;; Add any repositories here
(add-to-list 'package-archives
	     '("MELPA" .
	       "https://melpa.org/packages/"))
(package-initialize)

